<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Base.Theme.Act12" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/d_blue</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/yellow</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/d_blue</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.Act12" parent="Base.Theme.Act12" />

  <!-- Estilos para la Actividad 12 -->
  <style name="TitleText">
    <item name="android:textSize">24sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:layout_marginBottom">8dp</item>
  </style>

  <style name="DescriptionText">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/text_secondary</item>
    <item name="android:layout_marginBottom">24dp</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="CustomButton" parent="Widget.Material3.Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">60dp</item>
    <item name="android:textSize">18sp</item>
    <item name="cornerRadius">12dp</item>
  </style>
</resources>
